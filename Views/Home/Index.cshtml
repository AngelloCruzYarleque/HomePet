@{
    ViewData["Title"] = "Home Page";
    var mascota = (List<Mascota>)ViewBag.m;
}
@model List<Mascota>
<form asp-action="Index" method ="GET">
            <div id="menu" class = "row">
            <div class="col-3">
                    <label for="">Sexo</label>
                    <select name="sexo" id="" class="form-control" style="width: 200px;">
                            <option value="0">Seleccionar</option>
                            <option value="Macho">Macho</option>
                            <option value="Hembra">Hembra</option>
                    </select>
            </div>
            <div class="col-3">
                     
                    <label for="">Tamaño</label>
                    <select name="tamano" id="" class="form-control" style="width: 200px;">
                            <option value="0">Seleccionar</option>
                            <option value="Pequeño">Pequeño</option>
                            <option value="Mediano">Mediano</option>
                            <option value="Grande">Grande</option>
                    </select>
            </div>
            <div class="col-3">
                    <label for="">Edad</label>
                    <select name="tipoPelo" id="" class="form-control" style="width: 200px;">
                            <option value="0">Seleccionar</option>
                            <option value="3 - 6 meses">3 - 6 meses</option>
                            <option value="6 meses - 1 año">6 meses - 1 año</option>
                            <option value="1 - 3 años">1 - 3 años</option>
                            <option value="4 - 7 años">4 - 7 años</option>
                            <option value="+7 años">+7 años</option>  
                    </select>
            </div>
            <div class="col-3" style="background-color: azure"><button type="submit" class="btn btn-default">Filtrar</button></div>            
</form>




<h1>Mascotas</h1>
<div>
    @foreach (var m in mascota)
    {
        <div> 
            @m.Nombre
            @m.Edad
            @m.Tamano
            @m.TipoPelo
            @m.Sexo
            <img src="~/imagenes/@m.Foto" alt="">
        </div>
           
        
    }
</div>
