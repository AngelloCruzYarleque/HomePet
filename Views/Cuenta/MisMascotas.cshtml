@{
    ViewData["Title"] = "Home Page";
    var mascota = (List<Mascota>)ViewBag.m;
   var mascotar = (List<Mascota>)ViewBag.mr;          

}
@model List<Mascota>
<div class="container">
    
        <div class="row">
                <div class="col-sm">
                        <div class="text-center">
                                <h1 style="color: green">Mis Mascotas</h1>
                        </div>
                </div>
        </div>
        

                <div class="row">
                        
                        <div class="col-sm-6">
                                <div class="row">
                                        <div class="col-sm">
                                                <div class="text-center">
                                                        <h1>Mascotas Adoptadas</h1>
                                                </div>
                                        </div>
                                </div>
                                <div class="fondoIndex">
                                        <div class="row">
                                                @if(mascota.Count==0){
                                                        <div class="col-sm-12">
                                                                <h2 style="color: red" class="text-center">No tiene mascotas registradas</h2>
                                                        </div>
                                                }else{  
                                                @foreach (var m in mascota)
                                                {
                                                        <div style="margin-top: 10px;margin-bottom: 10px" class="col-sm-3">
                                                                <div class="mascota">
                                                                        <a href="~/home/detalles/@m.Id">
                                                                                <img src="~/imagenes/@m.Foto" width="150" height="180"><br><br>
                                                                                <p style="text-align: center">@m.Nombre</p>
                                                                        </a>
                                                                </div>
                                                        </div>
                                                }}
                                        </div>
                                </div>
                                
                        </div>
                        <div class="col-sm-6">
                                <div class="row">
                                        <div class="col-sm">
                                                <div class="text-center">
                                                        <h1>Mascotas en Adopci√≥n</h1>
                                                </div>
                                        </div>
                                </div>
                                <div class="fondoIndex">
                                        <div class="row">
                                                @if(mascotar.Count==0){
                                                        <div class="col-sm-12">
                                                                <h2 style="color: red" class="text-center">No tiene mascotas registradas</h2>
                                                        </div>
                                                }else{  
                                                        @foreach (var m in mascotar)
                                                        {
                                                                <div style="margin-top: 10px;margin-bottom: 10px" class="col-sm-6">
                                                                        <div class="mascota">
                                                                                <a href="~/home/detalles/@m.Id">
                                                                                        <img src="~/imagenes/@m.Foto" width="150" height="180"><br><br>
                                                                                        <p style="text-align: center">@m.Nombre</p>
                                                                                </a>
                                                                        </div>
                                                                </div>
                                                        }
                                                }
                                        </div>
                                </div>
                        </div>
                </div>
                
        
</div>
